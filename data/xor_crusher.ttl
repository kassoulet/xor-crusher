@prefix lv2:  <http://lv2plug.in/ns/lv2core#> .
@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix doap: <http://usefulinc.com/ns/doap#> .
@prefix uiext: <http://lv2plug.in/ns/extensions/ui#>.

<https://github.com/kassoulet/xor-crusher>
    a lv2:Plugin ,
        lv2:DistortionPlugin ;
    doap:name "XOR Crusher" ;
    doap:description "A bitcrusher that performs XOR operations between left and right channels" ;
    doap:developer [
        doap:name "Gautier Portet" ;
        doap:homepage <https://github.com/kassoulet/xor-crusher> ;
    ] ;
    doap:license <http://opensource.org/licenses/MIT> ;
    lv2:optionalFeature lv2:hardRTCapable ;
    lv2:port [
        a lv2:AudioPort ,
            lv2:InputPort ;
        lv2:index 0 ;
        lv2:symbol "audio_in_1" ;
        lv2:name "Audio In 1"
    ] , [
        a lv2:AudioPort ,
            lv2:InputPort ;
        lv2:index 1 ;
        lv2:symbol "audio_in_2" ;
        lv2:name "Audio In 2"
    ] , [
        a lv2:AudioPort ,
            lv2:OutputPort ;
        lv2:index 2 ;
        lv2:symbol "audio_out" ;
        lv2:name "Audio Out"
    ] , [
        a lv2:ControlPort ,
            lv2:InputPort ;
        lv2:index 3 ;
        lv2:symbol "bit_depth" ;
        lv2:name "Bit Depth" ;
        lv2:default 12.0 ;
        lv2:minimum 2.0 ;
        lv2:maximum 32.0 ;
        lv2:portProperty lv2:integer ;
    ] , [
        a lv2:ControlPort ,
            lv2:InputPort ;
        lv2:index 4 ;
        lv2:symbol "dry_wet" ;
        lv2:name "Dry/Wet" ;
        lv2:default 1.0 ;
        lv2:minimum 0.0 ;
        lv2:maximum 1.0 ;
        lv2:scalePoint [
            rdfs:label "4 bit" ;
            rdf:value 4.0 ;
        ] , [
            rdfs:label "8 bit" ;
            rdf:value 8.0 ;
        ] , [
            rdfs:label "12 bit" ;
            rdf:value 12.0 ;
        ] , [
            rdfs:label "16 bit" ;
            rdf:value 16.0 ;
        ] ;
    ] .
